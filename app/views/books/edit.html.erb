<h1>Editing Book</h1>
<!-- form_with部分 -->
<div class="errors">
 <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
 <ul><% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
   </ul>
<% end %>
</div>
<%= form_with model:@book, local: true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "show", book_path(@book.id) %>
